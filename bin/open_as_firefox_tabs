#!/bin/bash

if [ $# == 0 ]; then
    echo "usage: open_as_firefox_tabs URL [ URL ... ]"
    exit 1
fi

first=0
cl=""
for url in $@
do
  if [ $first == 0 ]; then
      firefox -remote 'openURL('${url}',new-window)' &
      sleep 10
      first=1
  else
      #cl=$cl" -remote openURL("$url") "
      firefox $url &
      sleep 3
  fi
done

#echo firefox $cl
#firefox $cl &
